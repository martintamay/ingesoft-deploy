  <div class="wrapper">
  <div class="header header-filter" style="background-image: url('<%= image_path("/assets/smartphone.jpg") %>'); background-size: cover; background-position: top center;">
    <div class="container">
      <div class="row">
        <div class="col-md-4 col-md-offset-4 col-sm-6 col-sm-offset-3">
          <div class="card card-signup">

              <div class="header header-primary text-center">
                <h4>Registrarse con</h4>
                <div class="social-line">
									<%= link_to user_facebook_omniauth_authorize_path, class: "btn btn-just-icon" do %>
										<i class="fa fa-facebook-square"></i>
									<% end %>
                  <a href="/users/auth/google_oauth2" class="btn btn-just-icon">
                    <i class="fa fa-google"></i>
                  </a>
                </div>
              </div>
              <% if @user.errors.any? %>
                <div class="alert alert-danger">
                  <strong>Hubo un problema!</strong> los siguientes errores evitan que pueda registrarse.
                  <ul>
                    <% @user.errors.full_messages.each do |message| %>
                      <li><%= message %></li>
                    <% end %>
                  </ul>
                </div>
              <% end %>
              <p class="text-divider">O hazlo de la forma clásica</p>
              <div class="content">



                <%= form_for(resource, as: resource_name, url: registration_path(resource_name), class: 'form') do |f| %>


                <div class="input-group">
                  <span class="input-group-addon">
                    <i class="material-icons">face</i>
                  </span>
                  <input type="text" class="form-control" autofocus="true" placeholder="Nombre..." autocomplete="name" required>
                </div>

                <div class="input-group">
                  <span class="input-group-addon">
                    <i class="material-icons">email</i>
                  </span>
                  <%= f.email_field :email, autocomplete: "email",placeholder: "Correo...", class: 'form-control', :required => true %>
                </div>
                <div class="input-group">
                  <span class="input-group-addon">
                    <i class="material-icons">lock_outline</i>
                  </span>
                  <%= f.password_field :password,autocomplete: "new-password" , :required => true, placeholder: "Contraseña...", class: 'form-control'  %>
                </div>
                <div class="input-group">
                  <span class="input-group-addon">
                    <i class="material-icons">lock_outline</i>
                  </span>
                  <%= f.password_field :password_confirmation , :required => true, autocomplete: "new-password", placeholder: "Confirmar contraseña...", class: 'form-control' %>
                </div>
                <div class="footer text-center">
                  <%= f.submit "CONTINUAR", class: "btn btn-primary btn-wd btn-lg"%>
                </div>
              <% end %>
              </div>
          </div>
        </div>
      </div>
    </div>

